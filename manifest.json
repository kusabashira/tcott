{
  "manifest_version": 2,
  "name":        "the-context-of-the-tweet",
  "short_name":  "tcott",
  "version":     "0.3",
  "description": "Investigate the context of the tweet",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "*://twitter.com/*/status/*",
    "activeTab",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "page_action": {
    "browser_style": true,
    "default_title": "Investigate the context of the tweet",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
